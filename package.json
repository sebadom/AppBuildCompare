{
  "name": "npmAsBuildTool",
  "version": "1.0.0",
  "description": "Just a testo to check if i can dish gulp or grunt if there is no need to have them",
  "main": "index.js",
  "scripts": {
    "bower": "bower --save",
    "style:app": "jscs ./app",
    "lint:app": "eslint ./app",
    "test:app": "istanbul cover ./node_modules/mocha/bin/_mocha -- \"test/**/test*.js\"",
    "coverage:app": "istanbul check-coverage test/coverage/coverage.json --statement 80 --branch 80 --function 80",
    "prebuild:app": "npm run lint:app && npm run style:app && npm run test:app && npm run coverage:app",
    "build:app": "browserify ./app/index.js -t uglifyify -o ./dist/app.min.js",
    "postbuild:app": "echo app built ok",
    "build": "npm run build:app"
  },
  "author": "Sebastian Dominguez <sebadominguezpicchio@gmail.com>",
  "license": "",
  "devDependencies": {
    "bower": "^1.4.1",
    "browserify": "^10.2.3",
    "chai": "^2.3.0",
    "chalk": "^1.0.0",
    "eslint": "^0.22.1",
    "istanbul": "^0.3.14",
    "jscs": "^1.13.1",
    "lodash": "^3.9.3",
    "mocha": "^2.2.5",
    "proxyquire": "^1.5.0",
    "sinon": "^1.14.1",
    "uglifyify": "^3.0.1"
  }
}
